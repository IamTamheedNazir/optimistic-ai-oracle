# Optimistic AI Oracle - Frontend Environment Configuration

# ============================================
# CONTRACT CONFIGURATION (REQUIRED)
# ============================================

# Deployed contract address (update after deployment)
REACT_APP_CONTRACT_ADDRESS=0x...

# Network configuration
REACT_APP_CHAIN_ID=11155111
REACT_APP_NETWORK_NAME=sepolia

# ============================================
# RPC ENDPOINTS (OPTIONAL)
# ============================================

# Infura (recommended)
REACT_APP_INFURA_ID=your_infura_project_id

# Alchemy (alternative)
REACT_APP_ALCHEMY_ID=your_alchemy_api_key

# ============================================
# FEATURE FLAGS (OPTIONAL)
# ============================================

# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# ============================================
# API ENDPOINTS (OPTIONAL)
# ============================================

# Backend API (if using)
REACT_APP_API_URL=http://localhost:3001

# Subgraph endpoint (if using)
REACT_APP_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/...

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================

# Google Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Mixpanel
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# ============================================
# SOCIAL & LINKS (OPTIONAL)
# ============================================

REACT_APP_GITHUB_URL=https://github.com/IamTamheedNazir/optimistic-ai-oracle
REACT_APP_DOCS_URL=https://docs.optimistic-ai-oracle.io
REACT_APP_DISCORD_URL=https://discord.gg/...
REACT_APP_TWITTER_URL=https://twitter.com/...

# ============================================
# DEVELOPMENT (OPTIONAL)
# ============================================

# Enable debug mode
REACT_APP_DEBUG=false

# Mock data for development
REACT_APP_USE_MOCK_DATA=false

# ============================================
# NOTES
# ============================================

# 1. Copy this file to .env and fill in your values
# 2. Never commit .env to version control
# 3. Update CONTRACT_ADDRESS after deployment
# 4. For production, use environment-specific .env files:
#    - .env.development
#    - .env.production
#    - .env.test
